# Embedded backend
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
API_KEY=
EXPOSED_ORIGINS=http://localhost:19006,http://localhost:5173

# Fitbit OAuth2
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=
FITBIT_REDIRECT_URI=http://127.0.0.1:8000/auth/fitbit/callback
FITBIT_POLL_INTERVAL=15
TIMEZONE=America/Costa_Rica

# Voice / Vision
USE_VOSK_OFFLINE=1
VOSK_MODEL_PATH=

# Camera settings
# Use `v4l2-ctl --list-devices` and check `/dev/video*` to pick index
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
# MediaPipe Pose model complexity (0 recommended on Pi 4)
MODEL_COMPLEXITY=0
# Force mock vision (skip camera/mediapipe init): 1 to enable
VISION_MOCK=0

# Mobile API base
API_BASE_URL=http://0.0.0.0:8000
