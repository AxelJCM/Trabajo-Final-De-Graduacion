#############################################
# Backend environment (copy to embedded/.env)
# Do NOT commit real secrets.
#############################################

# Server
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Fitbit OAuth2 (TEMPLATE — do not put real secrets here)
# Copy this file to embedded/.env and fill in your values locally.
# Use localhost in the redirect when authorizing through an SSH tunnel from your PC.
FITBIT_CLIENT_ID=YOUR_FITBIT_CLIENT_ID
FITBIT_CLIENT_SECRET=YOUR_FITBIT_CLIENT_SECRET
FITBIT_REDIRECT_URI=http://localhost:8000/auth/fitbit/callback
FITBIT_POLL_INTERVAL=15
TIMEZONE=America/Costa_Rica

# Camera & model (defaults are Pi-friendly)
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=360
CAMERA_FPS=15
MODEL_COMPLEXITY=0
VISION_MOCK=0
POSE_LATENCY_WINDOW=90
POSE_QUALITY_WINDOW=30
# Pose thresholds (degrees) for rep detection
SQUAT_DOWN_ANGLE=80
SQUAT_UP_ANGLE=160
PUSHUP_DOWN_ANGLE=75
PUSHUP_UP_ANGLE=150
CRUNCH_DOWN_ANGLE=50
CRUNCH_UP_ANGLE=150

# Optional features
#USE_VOSK_OFFLINE=1
#VOSK_MODEL_PATH=/home/pi/models/vosk-model-small-es-0.42
#VOICE_INTENT_MODEL_PATH=/home/pi/models/voice_intent.joblib
#VOICE_LISTENER_ENABLED=1
#VOICE_LISTENER_DEVICE=3
#VOICE_LISTENER_RATE=16000
#VOICE_LISTENER_BLOCKSIZE=8000
#VOICE_LISTENER_SILENCE_WINDOW=1.0
#VOICE_LISTENER_DEDUPE_SECONDS=2.0
#VOICE_LISTENER_BASE_URL=http://127.0.0.1:8000
#EXPOSED_ORIGINS=http://localhost:8000,http://<pi_ip>:8000
#API_KEY=
#VISION_MOCK=0

# Notes:
# - Create a file named embedded/.env (git-ignored) with your real values.
